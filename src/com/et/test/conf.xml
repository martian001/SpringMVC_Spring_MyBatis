<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- 别名 -->
	<typeAliases>
		<typeAlias type="com.et.bean.system.Student" alias="student" />
		<typeAlias type="com.et.bean.checkingIn.CheckingIn" alias="checkingIn" />
	</typeAliases>
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="com.p6spy.engine.spy.P6SpyDriver" />
				<property name="url" value="jdbc:oracle:thin:@localhost:1521:orcl" />
				<property name="username" value="oadb" />
				<property name="password" value="Ab123456" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<!-- 如果是映射文件,那么就用resource属性注册 -->
		<mapper resource="checkingIn/CheckingInMapper.xml" />
		<mapper resource="system/studentMapper.xml" />
	</mappers>

</configuration>
